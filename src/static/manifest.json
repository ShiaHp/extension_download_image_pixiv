{
  "name": "Extension_Pixiv",
  "description": "Extension_Pixiv",
  "version": "1.0.2",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Extension_Pixiv",
    "default_icon": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "search",
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "downloads",
    "downloads.shelf",
    "*://www.pixiv.net/*",
    "*://www.pixivision.net/*",
    "*://*.techorus-cdn.com/*",
    "*://*.pximg.net/*",
    "*://*.pixiv.cat/*",
    "webRequest",
    "webRequestBlocking",
    "management" ,
    "declarativeNetRequestWithHostAccess"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
    
      "matches": ["*://www.pixiv.net/*","*://*.pximg.net/*","*://pbs.twimg.com/*"],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "declarative_net_request_rules.json"
      }
    ]
  },
  "host_permissions": [
    "*://www.pixiv.net/*",
    "*://www.pixivision.net/*",
    "*://*.pximg.net/*",
    "*://*.pixiv.cat/*"
  ]
}