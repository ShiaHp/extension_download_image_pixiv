{
  "name": "Pixiv-Downloader",
  "description": "Pixiv-Downloader",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pixiv-Downloader",
    "default_icon": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "search",
    "tabs",
    "storage",
    "activeTab"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ]
}